<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <div class="task-card">
    <div class="task-check">
      <h3><% if task.complete %>
         <i class="far fa-check-square"></i>
          <% else %>
         <i class="far fa-square"></i>
         <% end %>
      </h3>
    </div>
    <div class="task-title">
      <h2><%= link_to task.title, task_path(task) %></h2>
    </div>
    <%= link_to '<i class="fas fa-trash"></i>'.html_safe, task_path(task),
        method: :delete,
        data: {confirm: "Are you sure?"} %>
  </div>
<% end %>

<div class="task-create">
  <%= link_to "Create a task", tasks_new_path %>
</div>
